{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2017", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@formily-mantine/cdk": ["libs/cdk/src/index.ts"],
      "@formily-mantine/common": ["libs/common/src/index.ts"],
      "@formily-mantine/components": ["libs/components/src/index.ts"],
      "@formily-mantine/core": ["libs/core/src/index.ts"],
      "@formily-mantine/modules/home": ["libs/modules/home/src/index.ts"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
